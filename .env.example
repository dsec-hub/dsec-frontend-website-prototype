# =============================================================================
# DSEC Frontend Website - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values
# NEVER commit .env.local to version control
# =============================================================================

# =============================================================================
# APPLICATION
# =============================================================================

# Base URL of your application (used for OAuth callbacks and API)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# BETTER AUTH CONFIGURATION
# =============================================================================

# Better Auth base URL (typically same as app URL)
BETTER_AUTH_URL=http://localhost:3000

# Secret key for signing tokens and sessions
# Generate with: openssl rand -base64 32
# REQUIRED in production - will fail without it
BETTER_AUTH_SECRET=your-super-secret-key-min-32-characters-long

# =============================================================================
# GOOGLE OAUTH
# =============================================================================
# Get these from: https://console.cloud.google.com/apis/credentials
# Create an OAuth 2.0 Client ID (Web application type)
# Authorized redirect URI: {NEXT_PUBLIC_APP_URL}/api/auth/callback/google

GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# GITHUB OAUTH
# =============================================================================
# Get these from: https://github.com/settings/developers
# Create a new OAuth App
# Authorization callback URL: {NEXT_PUBLIC_APP_URL}/api/auth/callback/github

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# GOOGLE ANALYTICS
# =============================================================================
# Get your Measurement ID from: https://analytics.google.com
# 1. Go to Admin > Data Streams > your web stream
# 2. Copy the Measurement ID (starts with "G-")
# Leave empty to disable analytics (e.g. in development)

NEXT_PUBLIC_GA_ID=

# =============================================================================
# BACKEND API (Optional - for external API integration)
# =============================================================================
# Your backend API endpoint for user data, events, projects, etc.
# Leave empty if not using external backend

NEXT_PUBLIC_API_URL=
API_SECRET_KEY=

# =============================================================================
# EMAIL â€” Hostinger SMTP (used by the /api/contact route)
# =============================================================================
# These power the contact form. Set them in .env.local.
# The same address is used as sender AND recipient (acts as an inbox).

SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USER=contact@dsec.club
SMTP_PASS=your_email_password_here

# =============================================================================
# BUTTONDOWN NEWSLETTER
# =============================================================================
# Get your API key from: https://buttondown.com/settings/api
# 1. Log in to your Buttondown account
# 2. Go to Settings > API
# 3. Copy your API key (it starts with your username)
# Note: Creating subscribers works on free plans too

BUTTONDOWN_API_KEY=your-buttondown-api-key

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# These are only used in development mode

# Skip email verification in development
# SKIP_EMAIL_VERIFICATION=true

# Enable debug logging
# BETTER_AUTH_DEBUG=true
